#!/bin/bash
# novim - A friendly terminal editor for vibe coders
# https://github.com/link2004/novim

set -euo pipefail

# Version is read from VERSION file at release time
NOVIM_VERSION="0.1.0"
REPO="link2004/novim"
INSTALL_DIR="${HOME}/.local/bin"
NOVIM_DIR="${HOME}/.local/share/novim"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Show version
if [[ "${1:-}" == "--version" || "${1:-}" == "-v" ]]; then
  echo "novim $NOVIM_VERSION"
  echo "powered by $(nvim --version | head -1)"
  exit 0
fi

# Show help
if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
  echo "novim - A friendly terminal editor for vibe coders"
  echo ""
  echo "Usage: novim [options] [file]"
  echo ""
  echo "Options:"
  echo "  -v, --version    Show version"
  echo "  -h, --help       Show this help"
  echo "  --update         Update to latest version"
  echo "  --uninstall      Uninstall novim"
  echo ""
  echo "Press ? in editor for keyboard shortcuts."
  exit 0
fi

# Update novim
if [[ "${1:-}" == "--update" ]]; then
  echo -e "${BLUE}Checking for updates...${NC}"

  LATEST_URL="https://github.com/${REPO}/releases/latest/download/novim.tar.gz"
  tmp_file=$(mktemp)

  if command -v curl &> /dev/null; then
    if ! curl -fsSL "$LATEST_URL" -o "$tmp_file"; then
      echo -e "${RED}Failed to download update${NC}"
      rm -f "$tmp_file"
      exit 1
    fi
  elif command -v wget &> /dev/null; then
    if ! wget -q "$LATEST_URL" -O "$tmp_file"; then
      echo -e "${RED}Failed to download update${NC}"
      rm -f "$tmp_file"
      exit 1
    fi
  else
    echo -e "${RED}curl or wget required${NC}"
    exit 1
  fi

  # Extract to novim directory
  if ! tar -xzf "$tmp_file" -C "$NOVIM_DIR" --strip-components=1; then
    echo -e "${RED}Failed to extract update${NC}"
    rm -f "$tmp_file"
    exit 1
  fi

  rm -f "$tmp_file"

  # Get new version
  NEW_VERSION=$(grep -oE '[0-9]+\.[0-9]+\.[0-9]+' "$NOVIM_DIR/VERSION" 2>/dev/null || echo "unknown")
  echo -e "${GREEN}Updated to novim $NEW_VERSION${NC}"
  exit 0
fi

# Uninstall novim
if [[ "${1:-}" == "--uninstall" ]]; then
  echo -e "${YELLOW}This will remove novim from your system.${NC}"
  read -p "Are you sure? [y/N] " -n 1 -r
  echo

  if [[ $REPLY =~ ^[Yy]$ ]]; then
    rm -f "$INSTALL_DIR/novim"
    rm -rf "$NOVIM_DIR"
    echo -e "${GREEN}novim has been uninstalled.${NC}"
  else
    echo "Cancelled."
  fi
  exit 0
fi

# Check nvim exists
if ! command -v nvim &> /dev/null; then
  echo "Error: Neovim is not installed." >&2
  echo "Install it with: brew install neovim" >&2
  exit 1
fi

# Setup paths (resolve symlinks)
SCRIPT_PATH="$0"
if [[ -L "$SCRIPT_PATH" ]]; then
  # Resolve symlink (compatible with macOS and Linux)
  if command -v readlink &> /dev/null && readlink -f "$SCRIPT_PATH" &> /dev/null; then
    SCRIPT_PATH="$(readlink -f "$SCRIPT_PATH")"
  else
    # macOS fallback (readlink -f not available)
    SCRIPT_PATH="$(cd "$(dirname "$SCRIPT_PATH")" && pwd -P)/$(basename "$SCRIPT_PATH")"
    while [[ -L "$SCRIPT_PATH" ]]; do
      SCRIPT_PATH="$(readlink "$SCRIPT_PATH")"
      [[ "$SCRIPT_PATH" != /* ]] && SCRIPT_PATH="$(dirname "$SCRIPT_PATH")/$SCRIPT_PATH"
    done
  fi
fi
SCRIPT_DIR="$(cd "$(dirname "$SCRIPT_PATH")" && pwd -P)"
NOVIM_ROOT="$(dirname "$SCRIPT_DIR")"
NOVIM_CONFIG="$NOVIM_ROOT/config"

export XDG_CONFIG_HOME="$NOVIM_CONFIG"
export XDG_DATA_HOME="$NOVIM_CONFIG/data"
export XDG_STATE_HOME="$NOVIM_CONFIG/state"

exec nvim "$@"
